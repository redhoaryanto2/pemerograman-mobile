<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TukangActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/ivBackTukang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Ingin Membangun Apa Kali Ini ?"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_frameinputtukang"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:elevation="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:elevation="15dp"
            android:background="@drawable/bg_caribangunan"
            android:hint="Lokasi Bangunan"
            android:drawableRight="@drawable/ic_cari"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/blacksemu"
            android:textColorHint="@color/blacksemu"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Pilih lewat Peta"
                android:textColor="@color/blacksemu"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:elevation="5dp"
                android:src="@drawable/ic_maps"/>
        </LinearLayout>

    </LinearLayout>




<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0.5dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:background="@color/blacksemu"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Registrasi"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:elevation="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_frameinputtukang"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">



            <EditText
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_formtukang"
                android:hint="Jumlah Tukang"
                android:textSize="15sp"
                android:inputType="number"
                android:textColor="@color/blacksemu"
                android:textColorHint="@color/blacksemu"
                android:fontFamily="sans-serif"
                android:paddingStart="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:background="@drawable/bg_formtukang"
                android:hint="Jumlah Hari"
                android:inputType="date"
                android:textSize="15sp"
                android:textColor="@color/blacksemu"
                android:textColorHint="@color/blacksemu"
                android:fontFamily="sans-serif"
                android:paddingStart="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_formtukang"
                android:hint="Masukan Tanggal"
                android:elevation="10dp"
                android:inputType="date"
                android:textSize="15sp"
                android:textColor="@color/blacksemu"
                android:textColorHint="@color/blacksemu"
                android:fontFamily="sans-serif"
                android:paddingStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:elevation="10dp"
                android:background="@drawable/bg_formtukang"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Deskripsikan Proyek"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/blacksemu"
                    android:textColorHint="@color/blacksemu"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:background="@drawable/bg_formtukang">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/blacksemu"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:text="Harga"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:textColor="@color/blacksemu"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Rp."/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/blacksemu"
                    android:textSize="13sp"
                    android:inputType="number"
                    android:hint="0"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_formtukang"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Biaya Layanan"
                    android:textColor="@color/blacksemu"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:fontFamily="sans-serif"
                    android:text="Rp."
                    android:textColor="@color/blacksemu"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/blacksemu"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_formtukang"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Total"
                    android:textColor="@color/blacksemu"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif"
                    android:text="Rp."
                    android:textColor="@color/blacksemu"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/blacksemu"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pesan Sekarang"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/orange"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>