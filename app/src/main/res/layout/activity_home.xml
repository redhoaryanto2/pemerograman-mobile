<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="5dp"
        android:background="@color/main"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackHome"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Nukkang"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:focusableInTouchMode="true"
                android:layout_marginStart="130dp"
                android:src="@drawable/ic_chat"/>
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_search"
            android:elevation="5dp"
            android:hint="cari"
            android:iconifiedByDefault="false"
            app:searchHintIcon="@color/blacksemu"
            app:searchIcon="@drawable/ic_cari" />
    </LinearLayout>

    <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kategori"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed-medium"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/menu_utama" />
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Populer"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_marginStart="10dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gambar3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gambar2"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terbaru"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif-condensed-medium"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/menuu"/>
    </ScrollView>


</LinearLayout>